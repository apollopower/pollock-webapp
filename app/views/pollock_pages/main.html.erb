<div class='container'>
    <h1>Analyze an Image</h1>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_tag('/pollock/analyze', method: 'get') do |f| %>
                <%= label_tag(:image_url, 'Image URL') %>
                <%= text_field_tag :image_url, "", class: 'form-control' %>
                <%= submit_tag "Generate", class: "btn btn-primary"  %>
            <% end %>
        </div>
    </div>
</div>